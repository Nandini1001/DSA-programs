#include<stdio.h>
#include<stdlib.h>
typedef struct list
{
    int data;
    struct list *next;
}sl;
void dlt(sl*);
void main()
{
    sl *p=NULL, *l=NULL, *r=NULL;
    int ch;
    while(1)
    {
        p=(sl*)malloc(sizeof(sl));
        if(p!=NULL)
        {
            printf("Enter value: ");
            scanf("%d", & p->data);
            if(l==NULL && r==NULL)
                l=r=p;
            else
            { 
                r->next=p;
                r=p;
            } 
            r->next=NULL;
            printf("Do you want to continue 1/0: ");
            scanf("%d",&ch);
            if(ch==0)
            break;
        }
    }
    dlt(l);
    p=l;
    while(p!=NULL)
    {
        printf("%d",p->data);
        p=p->next;
    }
}
void dlt(sl* l)
{
    sl *p=NULL, *f=NULL, *g=NULL;
    int c=1,k;
    p=f=l;
    printf("Enter from last which node you want to dlt: ");
    scanf("%d",&k);
    while(c!=k)
    {
        c++;
        p=p->next;
    }
    while(p->next->next!=NULL)
    {
        f=f->next;
        p=p->next;
    }
    g=f->next;
    f->next=f->next->next;
    free(g);
}
